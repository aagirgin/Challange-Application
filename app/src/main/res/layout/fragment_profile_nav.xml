<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.profile.profileaccountinfo.ProfileFragment">


        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:background="@color/primaryApplicationColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="90dp"
            android:background="#FFFFFF"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/circleImageView"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/textview_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/intersemibold"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shapeableImageView" />

        <View
            android:id="@+id/splitterView"
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:background="@color/splitterViewColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_username" />

        <View
            android:id="@+id/navProfileInfo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/custom_navtext_border"
            app:layout_constraintTop_toBottomOf="@+id/splitterView"/>

        <TextView
            android:id="@+id/accountInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_information"
            android:textSize="16sp"
            android:fontFamily="@font/interextrabold"
            android:textColor="@color/profileTextColor"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/navProfileInfo"
            app:layout_constraintStart_toStartOf="@+id/navProfileInfo"
            app:layout_constraintTop_toTopOf="@+id/navProfileInfo" />

        <ImageView
            android:id="@+id/navAccImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/baseline_navigate_next_24"
            app:layout_constraintBottom_toBottomOf="@+id/navProfileInfo"
            app:layout_constraintEnd_toEndOf="@+id/navProfileInfo"
            app:layout_constraintTop_toTopOf="@+id/navProfileInfo"
            app:tint="@color/profileTextColor" />

        <View
            android:id="@+id/navChangePwInfo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/custom_navtext_border"
            app:layout_constraintTop_toBottomOf="@+id/navProfileInfo"/>

        <TextView
            android:id="@+id/chagePwInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_password_text"
            android:textSize="16sp"
            android:fontFamily="@font/interextrabold"
            android:textColor="@color/profileTextColor"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/navChangePwInfo"
            app:layout_constraintStart_toStartOf="@+id/navChangePwInfo"
            app:layout_constraintTop_toTopOf="@+id/navChangePwInfo" />

        <ImageView
            android:id="@+id/changePwImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/baseline_navigate_next_24"
            app:layout_constraintBottom_toBottomOf="@+id/navChangePwInfo"
            app:layout_constraintEnd_toEndOf="@+id/navChangePwInfo"
            app:layout_constraintTop_toTopOf="@+id/navChangePwInfo"
            app:tint="@color/profileTextColor" />

        <View
            android:id="@+id/deleteAccInfo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/custom_navtext_border"
            app:layout_constraintTop_toBottomOf="@+id/navChangePwInfo"/>

        <TextView
            android:id="@+id/deleteAccText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_account_text"
            android:textSize="16sp"
            android:fontFamily="@font/interextrabold"
            android:textColor="@color/profileTextColor"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/deleteAccInfo"
            app:layout_constraintStart_toStartOf="@+id/deleteAccInfo"
            app:layout_constraintTop_toTopOf="@+id/deleteAccInfo" />

        <ImageView
            android:id="@+id/deleteAccImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/baseline_navigate_next_24"
            app:layout_constraintBottom_toBottomOf="@+id/deleteAccInfo"
            app:layout_constraintEnd_toEndOf="@+id/deleteAccInfo"
            app:layout_constraintTop_toTopOf="@+id/deleteAccInfo"
            app:tint="@color/profileTextColor" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>